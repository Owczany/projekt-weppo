<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Strona g≈Çowna</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
        }

        .badge {
            width: 200px;
            background-color: #fff;
            border: 1px solid #ccc;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            text-align: center;
        }

        .badge img {
            width: 100%;
            height: auto;
        }

        .badge .details {
            padding: 10px;
        }

        .badge .details .name {
            font-weight: bold;
            font-size: 1.2em;
            margin: 0;
            color: #333;
        }

        .badge .details .price {
            color: #e63946;
            font-size: 1em;
            margin-top: 5px;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
            background-color: #333;
            color: #fff;
        }

        .header .search-bar {
            margin-right: auto; /* Pierwszy element zostanie wyr√≥wnany do lewej */
        }

        .header .sort-bar,
        .header .cart-icon,
        .header button {
            margin-left: 10px; /* Odstƒôp miƒôdzy elementami */
        }

        .header .search-bar {
            display: flex;
            align-items: center;
        }

        .header input[type="text"] {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px 0 0 4px;
            margin: 0;
        }

        .header .search-bar button {
            padding: 5px 10px;
            border: none;
            background-color: #555;
            color: #fff;
            cursor: pointer;
            border-radius: 0 4px 4px 0;
        }

        .header select {
            padding: 5px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .cart-icon button {
            background: none;
            border: none;
            font-size: 1.5rem;
            cursor: pointer;
        }

        .product-container {
            display: grid;
            gap: 20px;
            padding: 20px;
            box-sizing: border-box;
        }

        .product-container.one-column {
            grid-template-columns: 1fr;
            justify-content: center;
        }

        .product-container.multi-column {
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        }

        @media (max-width: 768px) {
            .product-container {
                grid-template-columns: 1fr;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <form class="search-bar" action="/shop" method="get">
            <input type="text" name="search" placeholder="Szukaj..." value="<%= typeof search !== 'undefined' ? search : '' %>">
            <button type="submit"><i class="loupe-search">üîç</i></button>
        </form>
        <div class="sort-bar">
            <form id="sortForm" action="/shop" method="get">
                <select name="sort" onchange="document.getElementById('sortForm').submit()">
                    <option value="" <%= !sort ? 'selected' : '' %>>Sortuj</option>
                    <option value="ascending" <%= sort === 'ascending' ? 'selected' : '' %>>Cena: rosnƒÖco</option>
                    <option value="descending" <%= sort === 'descending' ? 'selected' : '' %>>Cena: malejƒÖco</option>
                </select>
                <input type="hidden" name="search" value="<%= typeof search !== 'undefined' ? search : '' %>">
            </form>
        </div>
        <div class="cart-icon">
            <a href="shopping-card.html">
                <button type="button">üõí</button>
            </a>
        </div>
        <% if (admin) { %>
            <div class="admin-panel">
                <a href="/admin">
                    <button type="button">Panel Admina</button>
                </a>
            </div>
        <% } %>
        <a href="/login">
        <button type="button">Zaloguj siƒô</button>
        </a>
    </div>
    
    <!--Tutaj sƒÖ tylko na sztywno plakietki kt√≥re siƒô potem wywali-->
    <div class="product-container multi-column">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <a href="/product/<%= product.id %>" style="text-decoration: none; color: inherit;">
                    <div class="badge">
                        <img src="<%= product.photo %>" alt="<%= product.name %>">
                        <div class="details">
                            <p class="name"><%= product.name %></p>
                            <p class="price">$<%= product.price.toFixed(2) %></p>
                        </div>
                    </div>
                </a>
            <% }); %>
        <% } else { %>
            <p>Brak produkt√≥w do wy≈õwietlenia.</p>
        <% } %>
    </div>

    <script>
        const productContainer = document.querySelector('.product-container');
        function adjustLayout() {
            if (window.innerWidth <= 500) {
                productContainer.classList.remove('multi-column');
                productContainer.classList.add('one-column');
            } else {
                productContainer.classList.remove('one-column');
                productContainer.classList.add('multi-column');
            }
        }
        
        window.addEventListener('resize', adjustLayout);
        adjustLayout();
    </script>
</body>
</html>
